            if (connection != null) {
                connection.close();
                System.out.println("Database connection closed.");
            }
        } catch (SQLException ex) {
            JOptionPane.showMessageDialog(this, "Error closing database connection: " +
                    ex.getMessage(), "Error", JOptionPane.ERROR_MESSAGE);
        }
    }                                  

